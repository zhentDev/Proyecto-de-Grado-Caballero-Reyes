{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "proyecto-monitoreo-bots",
	"version": "0.1.0",
	"identifier": "com.proyecto-monitoreo-bots.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "proyecto-monitoreo-bots",
				"fullscreen": false,
				"maximizable": true,
				"resizable": false,
				"decorations": true,
				"minWidth": 800,
				"minHeight": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}